<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.efe.fit4ever.MainActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/myWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal|top">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:layout_gravity="right|top"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMAIL" />

                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/usernameField"
                            android:layout_marginLeft="38dp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PASSWORD"
                            android:id="@+id/textView4" />

                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:id="@+id/passwordField"
                            android:layout_gravity="right|top"
                            android:layout_marginLeft="5dp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:weightSum="1">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login"
                            android:id="@+id/button4"
                            android:layout_weight="0.51"
                            android:textAllCaps="false"
                            android:onClick="logIn"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Singup"
                            android:id="@+id/button5"
                            android:layout_weight="0.47"
                            android:textAllCaps="false"
                            android:onClick="startSignUp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:layout_gravity="left|top"
                    android:weightSum="1"
                    android:baselineAligned="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="USERNAME"
                        android:id="@+id/usernameprofile"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Current Weight (kg) : "
                            android:id="@+id/textView6"
                            android:layout_marginTop="20dp" />

                        <EditText
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/weightText"
                            android:layout_marginTop="20dp"
                            android:inputType="number"
                            android:layout_marginLeft="10dp"
                            android:focusableInTouchMode="true"
                            android:focusable="true"
                            android:singleLine="true" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set"
                            android:id="@+id/setWeight"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:textAllCaps="false"
                            android:onClick="setWeight" />

                    </LinearLayout>

                    <Button
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Workout History"
                        android:id="@+id/button7"
                        android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:id="@+id/button8"
                        android:layout_gravity="center_vertical|right"
                        android:textAllCaps="false"
                        android:onClick="logOut" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weightEdit"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:numeric="integer"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workouts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal|top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most popular programs"
                        android:id="@+id/textView"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="22dp"
                        android:layout_gravity="center" />


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>
